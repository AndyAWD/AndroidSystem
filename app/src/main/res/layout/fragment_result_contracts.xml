<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/frcMbCreateDocument"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="建立檔案取得路徑\nCreateDocument()"
            android:textAllCaps="false"
            app:autoSizeTextType="uniform"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/frcMbGetContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="指定一個類型檔案，取得路徑\nGetContent()"
            android:textAllCaps="false"
            app:autoSizeTextType="uniform"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frcMbCreateDocument" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/frcMbGetMultipleContents"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="指定多個類型檔案，取得陣列路徑\nGetMultipleContents()"
            android:textAllCaps="false"
            app:autoSizeTextType="uniform"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frcMbGetContent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/frcMbOpenDocument"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="指定多個類型檔案，取得路徑\nOpenDocument()"
            android:textAllCaps="false"
            app:autoSizeTextType="uniform"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frcMbGetMultipleContents" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/frcMbOpenDocumentTree"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="指定資料夾，取得路徑\nOpenDocumentTree()"
            android:textAllCaps="false"
            app:autoSizeTextType="uniform"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frcMbOpenDocument" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/frcMbOpenMultipleDocuments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="指定多個類型檔案，取得陣列路徑\nOpenMultipleDocuments()"
            android:textAllCaps="false"
            app:autoSizeTextType="uniform"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frcMbOpenDocumentTree" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/frcMbPickContact"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="選擇單個連絡人\nPickContact()"
            android:textAllCaps="false"
            app:autoSizeTextType="uniform"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frcMbOpenMultipleDocuments" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/frcMbRequestMultiplePermissions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="詢問多個系統權限\nRequestMultiplePermissions()"
            android:textAllCaps="false"
            app:autoSizeTextType="uniform"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frcMbPickContact" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/frcMbRequestPermission"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="詢問一個系統權限\nRequestPermission()"
            android:textAllCaps="false"
            app:autoSizeTextType="uniform"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frcMbRequestMultiplePermissions" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/frcMbStartIntentSenderForResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="窩不知道\nStartIntentSenderForResult()"
            android:textAllCaps="false"
            app:autoSizeTextType="uniform"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frcMbRequestPermission" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/frcMbTakePicture"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="用 CreateDocument() 建立檔案再儲存照片\nTakePicture()"
            android:textAllCaps="false"
            app:autoSizeTextType="uniform"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frcMbStartIntentSenderForResult" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/frcMbTakePicture2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="用 File() 建立檔案再儲存照片\nTakePicture()"
            android:textAllCaps="false"
            app:autoSizeTextType="uniform"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frcMbTakePicture" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/frcMbTakePicturePreview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="照片預覽縮圖\nTakePicturePreview()"
            android:textAllCaps="false"
            app:autoSizeTextType="uniform"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frcMbTakePicture2" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/frcIvTakePicturePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frcMbTakePicturePreview" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/frcMbTakeVideo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="錄製影片，取得影片縮圖\nTakeVideo()"
            android:textAllCaps="false"
            app:autoSizeTextType="uniform"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frcIvTakePicturePreview" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/frcIvTakeVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frcMbTakeVideo" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/frcMbCropLensPicture"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="跳轉拍照剪裁"
            android:textAllCaps="false"
            app:autoSizeTextType="uniform"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frcMbLancer" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>